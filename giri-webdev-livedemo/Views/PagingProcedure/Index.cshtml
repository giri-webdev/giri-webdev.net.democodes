@using giri_webdev_livedemo.ViewModels
@model ProductViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Paging in Stored Procedure</h2>
<hr/>

@using (Html.BeginForm())
{
<table>
    <tr>
        <td>
            Page Index
        </td>
        <td>
            <select class="form-control" name="pageIndex">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
                <option>6</option>
                <option>7</option>
                <option>8</option>
            </select>
        </td>
    </tr>
    <tr>
        <td>
            Page Size
        </td>
        <td>
            <select class="form-control" name="pageSize">
                <option>10</option>
                <option>20</option>
                <option>30</option>
                <option>40</option>
            </select>
        </td>
    </tr>
    <tr>
        <td>
            sortOrder
        </td>
        <td>
            <select class="form-control" name="sortOrder">
                <option>ASC</option>
                <option>DESC</option>
            </select>
        </td>
    </tr>
    <tr>
        <td>
            sortColumn
        </td>
        <td>
            <select class="form-control" name="sortColumn">
                <option>ProductID</option>
                <option>ProductName</option>
            </select>
        </td>
    </tr>
    <tr>
        <td colspan="2">
            <hr/>
            <input class="btn btn-success" type="submit" value="Get Products" />
        </td>
    </tr>
</table>

    
 }
<hr/>
@if (Model.Products != null)
{
<table class="table table-bordered table-success">
    <tr>
        <th>
            Product ID
        </th>
        <th>
            Product Name
        </th>
        <th>
           CRUD Operation
        </th>
    </tr>

@foreach (var item in Model.Products)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ProductID }) |
            @Html.ActionLink("Details", "Details", new { id = item.ProductID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ProductID })
        </td>
    </tr>
}

</table>

<label>Total Record Count: @Model.TotalRecordCount</label>
}
